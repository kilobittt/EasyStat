<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_questionnaire_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">
            <TextView
                android:id="@+id/tv_questionnaire_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Название опросника"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/tv_questionnaire_header_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="описание опросника"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/secondary_text"
                android:padding="20dp"
                android:gravity="center"
                android:layout_margin="15dp"/>

            <Button
                android:id="@+id/bt_start_questionnaire"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="начать"
                android:textColor="@color/primary_text"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:background="@drawable/search_button"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:visibility="visible"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_question_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Заголовок вопроса"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/tv_question_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="описание вопроса "
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/secondary_text"
                android:padding="20dp"
                android:gravity="center"
                android:layout_margin="15dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ScrollView
                    android:id="@+id/sv_checkboxes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/chb_answer1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Ответ номер 1"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/secondary_text"
                            android:button="@null"
                            android:drawableLeft="@drawable/checkbox"
                            android:visibility="invisible"
                            />

                        <CheckBox
                            android:id="@+id/chb_answer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Ответ номер 2"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/secondary_text"
                            android:button="@null"
                            android:drawableLeft="@drawable/checkbox"
                            android:visibility="invisible"
                            />

                        <CheckBox
                            android:id="@+id/chb_answer3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Ответ номер 3"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/secondary_text"
                            android:button="@null"
                            android:drawableLeft="@drawable/checkbox"
                            android:visibility="invisible"
                            />

                        <CheckBox
                            android:id="@+id/chb_answer4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Ответ номер 4"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/secondary_text"
                            android:button="@null"
                            android:drawableLeft="@drawable/checkbox"
                            android:visibility="invisible"
                            />

                        <CheckBox
                            android:id="@+id/chb_answer5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Ответ номер 5"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/secondary_text"
                            android:button="@null"
                            android:drawableLeft="@drawable/checkbox"
                            android:visibility="invisible"
                            />

                        <CheckBox
                            android:id="@+id/chb_answer6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Ответ номер 6"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/secondary_text"
                            android:button="@null"
                            android:drawableLeft="@drawable/checkbox"
                            android:visibility="invisible"
                            />

                        <CheckBox
                            android:id="@+id/chb_answer7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Ответ номер 7"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/secondary_text"
                            android:button="@null"
                            android:drawableLeft="@drawable/checkbox"
                            android:visibility="invisible"
                            />

                        <CheckBox
                            android:id="@+id/chb_answer8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Ответ номер 8"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/secondary_text"
                            android:button="@null"
                            android:drawableLeft="@drawable/checkbox"
                            android:visibility="invisible"
                            />
                    </LinearLayout>

                </ScrollView>

                <ScrollView
                    android:id="@+id/sv_radio_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
                                android:id="@+id/rdb_answer1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Ответ номер 1"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/secondary_text"
                                android:button="@null"
                                android:drawableLeft="@drawable/radiobutton"
                                android:visibility="invisible"
                                />

                            <RadioButton
                                android:id="@+id/rdb_answer2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Ответ номер 2"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/secondary_text"
                                android:button="@null"
                                android:drawableLeft="@drawable/radiobutton"
                                android:visibility="invisible"
                                />

                            <RadioButton
                                android:id="@+id/rdb_answer3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Ответ номер 3"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/secondary_text"
                                android:button="@null"
                                android:drawableLeft="@drawable/radiobutton"
                                android:visibility="invisible"
                                />

                            <RadioButton
                                android:id="@+id/rdb_answer4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Ответ номер 4"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/secondary_text"
                                android:button="@null"
                                android:drawableLeft="@drawable/radiobutton"
                                android:visibility="invisible"
                                />

                            <RadioButton
                                android:id="@+id/rdb_answer5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Ответ номер 5"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/secondary_text"
                                android:button="@null"
                                android:drawableLeft="@drawable/radiobutton"
                                android:visibility="invisible"
                                />

                            <RadioButton
                                android:id="@+id/rdb_answer6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Ответ номер 6"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/secondary_text"
                                android:button="@null"
                                android:drawableLeft="@drawable/radiobutton"
                                android:visibility="invisible"
                                />

                            <RadioButton
                                android:id="@+id/rdb_answer7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Ответ номер 7"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/secondary_text"
                                android:button="@null"
                                android:drawableLeft="@drawable/radiobutton"
                                android:visibility="invisible"
                                />

                            <RadioButton
                                android:id="@+id/rdb_answer8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Ответ номер 8"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/secondary_text"
                                android:button="@null"
                                android:drawableLeft="@drawable/radiobutton"
                                android:visibility="invisible"
                                />

                        </RadioGroup>

                    </LinearLayout>
                </ScrollView>

                <ScrollView
                    android:id="@+id/sv_text_answer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_text_answer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:hint="@string/text_answer_header"
                        app:met_primaryColor="@color/primary_text"
                        app:met_baseColor="@color/primary"
                        app:met_textColor="@color/primary_text"
                        app:met_textColorHint="@color/secondary_text"/>


                </LinearLayout>
                </ScrollView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bt_prev_question"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/preveus_button_text"
                    android:textColor="@color/primary_text"
                    android:layout_margin="20dp"
                    android:padding="5dp"
                    android:background="@drawable/search_button"/>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/bt_next_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/next_button_text"
                        android:textColor="@color/primary_text"
                        android:layout_margin="20dp"
                        android:padding="5dp"
                        android:background="@drawable/search_button"/>

                    <Button
                        android:visibility="invisible"
                        android:id="@+id/bt_end_questionnaire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/end_questionnaire_text"
                        android:textColor="@color/primary_text"
                        android:layout_margin="20dp"
                        android:padding="5dp"
                        android:background="@drawable/search_button"/>
                </FrameLayout>
            </LinearLayout>



        </LinearLayout>

    </FrameLayout>

</LinearLayout>